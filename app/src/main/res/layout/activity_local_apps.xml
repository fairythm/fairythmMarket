<?xml version="1.0" encoding="utf-8"?>
<!-- 此布局文件用于指定：本地APP列表. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocalApps">

    <RelativeLayout
        android:id="@+id/local_app_info_label_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#40328945">
        <TextView
            android:id="@+id/local_app_info_label"
            android:text="Installed Apps:"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/packages_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_app_info_label_layout"
        android:layout_margin="16dp"
        android:divider="@null">

    </ListView>

</RelativeLayout>